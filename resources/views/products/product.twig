{% extends 'templates/app.twig' %}


{% block content %}

   <div class="row">
        <div class="col-md-4">
          <img src="{{ product.image }}" alt="{{ product.title }} title" class="thumbnail img-responsive">
        </div>

        <div class="col-md-8">

          <h4>
          {% if product.hasLowStock() %}
             <span class="label label-warning">Low stock</span>
          {% endif %}

          {% if product.outOfStock() %}
             <span class="label label-danger">Out of stock</span>
          {% endif %}

          {% if product.inStock() %}
             <span class="label label-success">Available</span>
          {% endif %}
          </h4>

          <h3>{{ product.title }}</h3>
          <p>{{ product.description }}</p>

          {%  if product.inStock() or product.hasLowStock() %}
          <a href=" {{ path_for('cart.add',{ slug: product.slug, quantity: 1 }) }} " class="btn btn-default btn-sm">Add to cart</a>
          {% endif %}

        </div>
   </div>
{% endblock %}
